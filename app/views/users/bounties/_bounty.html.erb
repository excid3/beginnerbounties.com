<div id="<%= dom_id bounty %>" class="bg-white mb-8 border shadow rounded-md pt-8 px-8">
  <div class="flex justify-between">
    <div class="mb-4 text-2xl font-bold text-green-600">
      <%= number_to_currency bounty.amount, precision: 0 %>
    </div>

    <%= link_to 'Edit this bounty', edit_users_bounty_path(bounty), class: "text-blue-500 no-underline hover:underline" %>
  </div>

  <div class="[overflow-wrap:anywhere]">
    <h2 class="m-0 break-words"><%= bounty.title %></h2>
    <div class="text-sm">Created by <%= bounty.user.name %></div>
    <%= simple_format truncate(bounty.description.to_plain_text, length: 1000) %>
  </div>

  <div class="bg-gray-50 -mx-8 px-8 py-4">
    <div class="flex items-center justify-between gap-8">
      <%= form_for bounty, url: users_bounty_path(bounty), method: :patch do |f| %>
        <%= f.select :status, Bounty::STATUSES.map{|s| [s.humanize, s] }, {}, {class: "block shadow rounded-md border border-gray-200 outline-none px-3 py-2 mr-5 mt-2 w-full", onchange: "this.form.submit()"} %>
      <% end %>

      <%= link_to bounty.url, class: "no-underline flex items-center gap-1", target: :_blank do %>
        View Project
        <svg class="inline h-5 w-5" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" d="M13.5 6H5.25A2.25 2.25 0 003 8.25v10.5A2.25 2.25 0 005.25 21h10.5A2.25 2.25 0 0018 18.75V10.5m-10.5 6L21 3m0 0h-5.25M21 3v5.25" />
        </svg>
      <% end %>
    </div>
  </div>
</div>
