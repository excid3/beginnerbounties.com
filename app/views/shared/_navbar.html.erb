<header class="bg-gray-900 text-white shadow-lg">
  <nav class="mx-auto flex max-w-7xl items-center justify-between gap-x-6 p-6 lg:px-8" aria-label="Global">
    <%= link_to root_path do %>
      <h1 class="hidden md:block font-bold md:text-2xl m-0 uppercase">
        Beginner<span class="ml-1 p-0.5 bg-white text-gray-900">Bounties</span>
      </h1>

      <h1 class="md:hidden font-bold md:text-2xl m-0 uppercase">
        B<span class="ml-1 p-0.5 bg-white text-gray-900">B</span>
      </h1>
    <% end %>

    <div class="text-sm md:text-base flex lg:gap-x-12">
      <%= nav_link_to "Bounties", bounties_path, class: "text-white text-sm font-semibold leading-6", active_class: "border-b-2 border-indigo-500 px-2.5 -mx-2.5" %>
    </div>
    <div class="flex flex-1 items-center justify-end gap-x-6">
      <%= nav_link_to "Post a bounty", new_users_bounty_path, class: "rounded-md bg-indigo-600 py-2 px-3 text-sm font-semibold text-white shadow-sm hover:bg-indigo-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-indigo-600" %>
      <% if user_signed_in? %>
        <%= nav_link_to "My Bounties", users_bounties_path, class: "text-white text-sm font-semibold leading-6", active_class: "border-b-2 border-indigo-500 px-2.5 -mx-2.5" %>
        <%= link_to "Profile", edit_user_registration_path, class: "text-white text-sm font-semibold leading-6" %>
        <%= button_to "Log out", destroy_user_session_path, method: :delete, class: "text-white text-sm font-semibold leading-6" %>
      <% else %>
        <%= link_to "Log in", new_user_session_path, class: "text-white text-sm font-semibold leading-6" %>
        <%#= link_to "Sign Up", new_user_registration_path, class: "rounded-md bg-indigo-600 py-2 px-3 text-sm font-semibold text-white shadow-sm hover:bg-indigo-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-indigo-600" %>
      <% end %>
    </div>
  </nav>
</header>
